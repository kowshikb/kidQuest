{
  "name": "kidquest-champions",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "seed-db": "node scripts/seedDatabase.js",
    "deploy-rules": "firebase deploy --only firestore:rules",
    "deploy-indexes": "firebase deploy --only firestore:indexes",
    "deploy-db": "npm run deploy-rules && npm run deploy-indexes",
    "cleanup-rooms": "node scripts/cleanupRooms.js",
    "cleanup-old-rooms": "node scripts/cleanupRooms.js --old-only 24",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "firebase:init": "firebase init",
    "firebase:login": "firebase login",
    "start": "npm run dev"
  },
  "dependencies": {
    "firebase": "^10.9.0",
    "firebase-admin": "^13.4.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
